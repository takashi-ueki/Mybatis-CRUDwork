<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.training.Mybatiswork0920.mapper.HouseholdAccountMapper">
    <select id="findByCategory" resultType="com.training.Mybatiswork0920.entity.HouseholdAccount">
        SELECT * FROM accounts

        <where>
            <if test="category !=null">
                category = #{category}
            </if>
        </where>
    </select>
</mapper>